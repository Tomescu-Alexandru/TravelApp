<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/medium_dim"
    android:background="@color/teal_700"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="@dimen/medium_dim">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/tripImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxWidth="@dimen/img_dim"
            android:maxHeight="@dimen/img_dim"
            android:paddingBottom="@dimen/medium_dim"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/tripName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/medium_dim"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/tripDestination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/medium_dim"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price :" />

            <TextView
                android:id="@+id/tripPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" EUR" />
        </LinearLayout>

    </LinearLayout>


    <RatingBar
        android:id="@+id/tripFavorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="1"
        android:stepSize="1"
        android:theme="@style/RatingBar" />


</LinearLayout>