<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/medium_dim">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/trip_name"
                android:textSize="@dimen/text_medium_dim" />

            <EditText
                android:id="@+id/trip_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Write Trip name here"
                android:textSize="@dimen/text_medium_dim" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/medium_dim"
            android:paddingBottom="@dimen/medium_dim">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/destination"
                android:textSize="@dimen/text_medium_dim" />

            <EditText
                android:id="@+id/trip_destination_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Write Trip Destination here"
                android:textSize="@dimen/text_medium_dim" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/medium_dim"
            android:text="Trip Type"
            android:textSize="@dimen/text_medium_dim" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/medium_dim">

            <RadioButton
                android:id="@+id/city_break"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="City Break" />

            <RadioButton
                android:id="@+id/sea_side"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sea Side" />

            <RadioButton
                android:id="@+id/mountains"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mountains" />

        </RadioGroup>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/medium_dim"
            android:paddingBottom="@dimen/medium_dim">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/price_eur"
                android:textSize="@dimen/text_medium_dim" />

            <EditText
                android:id="@+id/trip_price_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Write Trip Price here"
                android:inputType="numberDecimal"
                android:textSize="@dimen/text_medium_dim" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/medium_dim"
            android:paddingBottom="@dimen/medium_dim">

            <TextView
                android:id="@+id/start_date_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Date"
                android:textSize="@dimen/text_medium_dim" />

            <EditText
                android:id="@+id/trip_start_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:inputType="date"
                android:textSize="@dimen/text_medium_dim" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/medium_dim"
            android:paddingBottom="@dimen/medium_dim">

            <TextView
                android:id="@+id/end_date_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End Date"
                android:textSize="@dimen/text_medium_dim" />

            <EditText
                android:id="@+id/trip_end_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:inputType="date"
                android:textSize="@dimen/text_medium_dim" />
        </LinearLayout>

        <RatingBar
            android:id="@+id/trip_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="0.5" />

        <Button
            android:id="@+id/save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save" />
    </LinearLayout>


</ScrollView>